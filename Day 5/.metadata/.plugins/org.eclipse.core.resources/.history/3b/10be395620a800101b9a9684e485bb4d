package com.example.demo;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.SQLException;

import com.example.demo.utils.ConnectionUtils;

public class TransactionDemo {

	public static void main(String[] args) {

		Connection connection = ConnectionUtils.getMySqlConnection();
		try(connection) {
			connection.setAutoCommit(false);
			
			String insertSql = "inset into doctor values(?,?,?);";
			
			String updateSql = "update patient set doctorid = 100 where patientid = 3";
			
			PreparedStatement query = connection.prepareStatement(insertSql);
			
			query.setInt(1, 100);
			query.setString(2, "Dogesh");
			query.setString(3, "OPD");
			
			query.executeQuery();
			
			query = connection.prepareStatement(updateSql);
			query.executeQuery();
			
			
		} catch(SQLException e) {
			try {
				connection.rollback();
			} catch (SQLException e1) {
				// TODO Auto-generated catch block
				e1.printStackTrace();
			}
			e.printStackTrace();
		}
	}

}
