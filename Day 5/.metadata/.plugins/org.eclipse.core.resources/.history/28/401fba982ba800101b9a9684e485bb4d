package com.example.demo;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;

import com.example.demo.utils.ConnectionUtils;

public class ConfigResultSet {

	public static void main(String[] args) {

		Connection con = null;
		try {
			con = ConnectionUtils.getMySqlConnection();
//			con.setAutoCommit(false);
			String sql = "Select * from customer;";
			
			PreparedStatement pstmt = con.prepareStatement(sql, ResultSet.TYPE_SCROLL_INSENSITIVE, ResultSet.CONCUR_UPDATABLE);
			
			ResultSet rs = pstmt.executeQuery();
			
//			System.out.println("Starting :-----------");
//			System.out.println("Is Cursor Before First : " + rs.isBeforeFirst());
//			System.out.println("Is Cursor After Last : " + rs.isAfterLast());
//			while(rs.next());
//			System.out.println("Ending :-----------");
//			
//			System.out.println("Is Cursor Before First : " + rs.isBeforeFirst());
//			System.out.println("Is Cursor After Last : " + rs.isAfterLast());
			
			rs.absolute(2); // Second Loaction
			System.out.println(rs.getInt(1) + rs.getString(2));
			
			rs.relative(3); // Move 2 row from current location
			System.out.println(rs.getInt(1) + rs.getString(2));
			
			rs.first();
			System.out.println(rs.getInt(1) + rs.getString(2));
			
			rs.last();
			System.out.println(rs.getInt(1) + rs.getString(2));
			
			rs.updateString(2, "yellow");
			
			String insertSql = "insert into customer values(?,?,?,?,?);";
			PreparedStatement quesry = con.prepareStatement(insertSql);
			
			
					
//			con.setAutoCommit(true);
			
		}catch(Exception e) {
			
		}
	}

}
