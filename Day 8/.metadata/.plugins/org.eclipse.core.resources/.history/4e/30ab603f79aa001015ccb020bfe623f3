package com.example.demo.pecs;

import java.io.Console;
import java.lang.reflect.Array;
import java.lang.reflect.Method;
import java.util.*;

// Producer Extends Consumer Super
public class PecsDemo {
	
	public static void prodMethod(List<? extends Number> list) {
		list.forEach(System.out::println);
		
		System.out.println(list.get(1));
		
		
//		list.add(Integer.valueOf(1)); // only produces but cant consume, means can't change value
		
//		list.set(2,92);
		
	}
	
	public static void consMethod(List<? super Number> list) {
		list.forEach(System.out::println);
		
//		System.out.println(list.get(1));
//		
//		list.add(Integer.valueOf(12));	
	}
	
	public static void test(List<? super Integer> list) {
		list.forEach(System.out::println);
		
//		System.out.println(list.get(1));
//		
//		list.add(Integer.valueOf(12));	
	}
	
	public static void main(String []args) {
		List<Number> numberList = Arrays.asList(10,20,30,40);
		
		List<Integer> integerList = Arrays.asList(888,999,777,666);
		
		List<Double> doubleList = Arrays.asList(111.00,222.00,333.00);
		
		List<Object> objList = Arrays.asList("bhumut",12,3.40);
		
//		List<Short> shortList = new ArrayList<>();
//		shortList.add(1);
		
		//Point one
//		method(numberList);
//		method(integerList);
//		method(doubleList);
		
		
		// Point Two
//		prodMethod(objList);
//		prodMethod(numberList);
//		prodMethod(integerList);
//		prodMethod(doubleList);
		
		// Point Three
//		consMethod(objList);
//		consMethod(numberList);
//		consMethod(integerList);
//		consMethod(doubleList);
		
		test(objList);
		test(numberList);
		test(integerList);
		
	}

	private static void method(List<Number> list) {
		list.forEach(System.out::println);
		
	}

}
