package com.example.demo.module.three;

import java.util.Collection;

import com.example.demo.exception.ElementsAlreadyExistException;
import com.example.demo.exception.NotFoundException;

public class EmployeeService {
	
	private EmployeeRepoImpl repo;
	
	public EmployeeService() {
		this.repo = new EmployeeRepoImpl();
	}
	
	public boolean addEmployee(Employee emp) throws ElementsAlreadyExistException {
		return repo.add(emp);
	}
	
	public boolean removeEmployee(int id) throws NotFoundException {
		return repo.remove(id);
	}
	
	public Collection<Employee> getAllEmployee(){
		return repo.findAll();
	}
	
	public Employee getEmployeeById(int id) throws NotFoundException {
		return repo.findById(id);
	}
	
	public Collection<Employee> getEmployeeByName(String name) {
		return repo.findByEmployeeName(name);
	}
	
	public Collection<Employee> getSortedListOfEmployeeById(){
		return repo.
	}
	
	public Collection<Employee> getSortedListOfEmployeeByName(){
		return repo.sortedList(EmployeeUtils.NameComarator);
	}
	
	
	
	
	
}
